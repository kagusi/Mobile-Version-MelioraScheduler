<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="edu.rochester.meliorascheduler.Appointment.AppointmentHistoryFragment">


<TextView
    android:id="@+id/appointHistory_NoAppointHistory"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:typeface="sans"
    android:textSize="24sp"
    android:textStyle="bold"
    android:text="@string/no_appointment_history" />

<LinearLayout
    android:id="@+id/appointHistory_historyLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone">

    <TextView
        android:id="@+id/appointHistory_HistoryextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:typeface="sans"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="@string/appointment_history"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="10dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/appointHistory_HistoryRecycleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="55dp">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>


</RelativeLayout>
